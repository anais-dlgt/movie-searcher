
<div class="table-container">
  <h2>Votre recherche : <%= params[:movie] %></h2>
  <table class="table-dark">
    <thead>
      <tr>
        <td>Affiche</td>
        <td>Titre du film</td>
        <td>Sortie</td>
        <td>Réalisateur</td>
      </tr>
    </thead>
    <tbody>
      <% if @results.empty? %>
      <h2>Désolé votre recherche n'a rien donné</h2>
      <% else %>
      <% @results.each do |movie| %>
      <tr>
        <td><img alt="<%= movie[:title]%>" src="https://image.tmdb.org/t/p/w185<%= movie[:poster_path]%>" /></td>
        <td><%= movie[:title]%></td>
        <td><%= movie[:release_date] %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
